{
  "name": "pt-formgenerator",
  "version": "1.5.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "npm run test:e2e",
    "test:e2e": "npm start & sleep 5 && cypress run",
    "start": "parcel src/index.html",
    "lint": "eslint src --ext .js --quiet --cache",
    "dev": "del dist && NODE_ENV=dev rollup -c --sourcemap && node-sass src/App.scss > dist/main.css;",
    "dev:css": "node-sass src/App.scss > dist/main.css;",
    "build": "del dist && rollup -c --sourcemap && node-sass src/App.scss | postcss > dist/main.css;",
    "build:css": "node-sass src/App.scss | postcss > dist/main.css;",
    "preversion": "git update-index --no-assume-unchanged package-lock.json && git update-index --no-assume-unchanged $(git ls-files dist | tr '\n' ' ') && npm run build && git add dist",
    "postversion": "git update-index --assume-unchanged package-lock.json && git update-index --assume-unchanged $(git ls-files dist | tr '\n' ' ') && git push --tags && git push"
  },
  "author": "ProtonMail",
  "license": "ISC",
  "devDependencies": {
    "@babel/polyfill": "^7.4.4",
    "abortcontroller-polyfill": "^1.3.0",
    "babel-core": "^6.26.3",
    "babel-eslint": "^10.0.3",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "cypress": "^3.4.1",
    "del-cli": "^2.0.0",
    "eslint": "^6.3.0",
    "design-system": "github:ProtonMail/design-system.git",
    "eslint-config-synacor": "^3.0.4",
    "husky": "^3.0.5",
    "lint-staged": "^9.2.5",
    "lodash.debounce": "^4.0.8",
    "lodash.omit": "^4.5.0",
    "node-sass": "^4.12.0",
    "parcel-bundler": "^1.12.3",
    "postcss-cli": "^6.1.3",
    "preact": "^8.5.2",
    "prettier": "^1.18.2",
    "rollup": "^1.20.3",
    "rollup-plugin-babel": "^4.3.3",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-strip-code": "^0.2.7",
    "rollup-plugin-terser": "^5.1.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "git add"
    ],
    "*.scss": [
      "prettier --write",
      "git add"
    ],
    "*.yml": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "git update-index --assume-unchanged package-lock.json && lint-staged"
    }
  }
}
